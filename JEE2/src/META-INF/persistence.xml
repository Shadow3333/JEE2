<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="Annuaire" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>monapp.model.Person</class>
		<class>monapp.model.Group</class>
		<class>monapp.model.CV</class>
		<class>monapp.model.Login</class>
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />

			<!-- parametres de connection JDBC -->
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/JEE2" />
			<property name="hibernate.connection.username" value="root" />
			<!-- <property name="hibernate.connection.password" value="" /> -->

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="update" /> -->
			<!-- <property name="javax.persistence.schema-generation.database.action" 
				value="create"/> -->
		</properties>
	</persistence-unit>

	<persistence-unit transaction-type="RESOURCE_LOCAL"
		name="h2">

		<class>monapp.model.Person</class>
		<class>monapp.model.Group</class>
		<class>monapp.model.CV</class>
		<class>monapp.model.Login</class>
		<class>springapp.entities.Group</class>
		<class>springapp.entities.Person</class>

		<properties>

			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.enable_lazy_load_no_trans" value="true" />
			<property name="hibernate.connection.useUnicode" value="true" />
			<property name="hibernate.connection.characterEncoding"
				value="UTF-8" />
			<property name="hibernate.connection.charSet" value="UTF-8" />


			<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
			<property name="hibernate.connection.url" value="jdbc:h2:mem:test?characterEncoding=UTF-8" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />

		</properties>
	</persistence-unit>
</persistence>